@using CheeseMVC.Models
@model IList<CheeseCategory>

<h1>Categories</h1>

@if (Model.Count == 0)
{
    <h2>You don't have any categories yet!</h2>

} else{

    <ul class="list-group">
        @foreach (CheeseCategory category in Model)
        {
            <li class="list-group-item">@category.Name</li>

        }
    </ul>

}

<p><a asp-contoller="category" asp-action="add">Add Category</a></p>