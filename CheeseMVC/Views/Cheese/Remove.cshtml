@using CheeseMVC.Models
@model List<Cheese>

<h1>@ViewBag.title</h1>

@if (Model.Count == 0)
{
    <p>You have removed all cheese</p>

} else{ 

<form method="post">

    <select name="cheeseId">
        @foreach (Cheese cheese in Model)
        {
            <option value="@cheese.CheeseId">@cheese.Name, @cheese.Description</option>

        }


    </select>

    <input type="submit" value="Remove This Cheese From My Sight" />

</form>

}

