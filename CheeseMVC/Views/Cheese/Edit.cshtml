<h1>Edit Cheese @ViewBag.cheese.Name.ToUpper() (id = @ViewBag.cheese.CheeseId)</h1>

<form method="post">
    <input type="text" name="name" value="@ViewBag.cheese.Name" />
    <input type="text" name="description" value="@ViewBag.cheese.Description" />
    <input type="hidden" value="@ViewBag.cheese.CheeseId" name="id"/>
    <input type="submit" value="Edit Cheese" />
</form>
