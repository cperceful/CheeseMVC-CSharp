@using CheeseMVC.Models
@model List<Cheese>


<h1>My Cheese</h1>

@if (Model.Count == 0)
{
    <p>You have no cheese.</p>

}

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Rating</th>
        
    </tr>

    @foreach(Cheese cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
            <td>@cheese.Rating</td>
            <td><a asp-controller="cheese" asp-action="edit" asp-route-id="@cheese.ID">Edit</a></td>
        </tr>

    }
</table>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a> | <a asp-controller="cheese" asp-action="remove">Remove</a></p>