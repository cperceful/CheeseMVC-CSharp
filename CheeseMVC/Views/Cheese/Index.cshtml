@using CheeseMVC.Models
@model List<Cheese>


<h1>My Cheese</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

@if (Model.Count == 0)
{
    <p>You have no cheese.</p>

}

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
        
    </tr>

    @foreach(Cheese cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Type</td>
            <td><a asp-controller="cheese" asp-action="edit" asp-route-id="@cheese.CheeseId">Edit</a></td>
        </tr>

    }
</table>