@using CheeseMVC.Models;

<h1>My Cheese</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

@if (ViewBag.cheeses.Count == 0)
{
    <p>You have no cheese.</p>

}

<ul>
    @foreach (Cheese cheese in ViewBag.cheeses) //variable must be called by ViewBag.variable
    {
    <li value="@cheese.CheeseId">@cheese.Name, @cheese.Description, <a asp-controller="Cheese" asp-action="Edit" asp-route-id="@cheese.CheeseId">Edit</a></li>
    }
</ul>